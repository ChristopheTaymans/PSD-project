<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="{i18n>usagesearchhelpTitle}"
		class="sapUiPopupWithPadding"
		items="{main>/UsageSet}"
		liveChange="onWbsSearch"
		growingThreshold='20'
		confirm="onUsageSearchHelpConfirm"
		cancel="onUsageSearchHelpCancel">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
			title="{Description}"
			description="{Milestone}"
			/>
	</SelectDialog>
</core:FragmentDefinition>